{% macro generate(name, value) %}
    <div class="input-group">
        {% if value.icon %}<span class="input-group-addon"><i class="fa {{value.icon}}"></i></span>{% endif %}
	    <input type="number" class="{% if value.class %}{{value.class}}{% else %}form-control{% endif %}" name="{{name}}" autocomplete="off" value="{{value.data}}" {% if value.min %}min="{{value.min}}" {% endif %}{% if value.max %}max="{{value.max}}" {% endif %}{% if value.step %}step="{{value.step}}" {% endif %}placeholder="{{translate(value.placeholder)}}" {% if value.disabled %}disabled{% endif %} {% for cName, cValue in value.custom %}{{cName}}="{{cValue}}" {% endfor %}></input>
    </div>
{% endmacro %}
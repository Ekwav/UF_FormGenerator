{% macro generate(name, value) %}
    <div class="checkbox">
        {% if value.icon %}<span class="input-group-addon"><i class="fa {{value.icon}}"></i></span>{% endif %}
        <input type="checkbox" name="{{value.name}}" class="{% if value.class %}{{value.class}}{% endif %}" {% if value.data == 1 %}checked{% endif %} {% if value.disabled %}disabled{% endif %}></input>
    </div>
{% endmacro %}
{% macro generate(name, value) %}
    <select class="{% if value.class %}{{value.class}}{% else %}form-control js-select2{% endif %}" name="{{value.name}}" id="{{value.id}}"{% if value.disabled %} disabled{% endif %} data-placeholder="{{translate(value.placeholder)}}" {% for cName, cValue in value.custom %} {{cName}}="{{cValue}}" {% endfor %}>
        {% for option, label in value.options %}<option value="{{option}}" {% if (option == value.data) %}selected{% endif %}>{{translate(label)}}</option>{% endfor %}
    </select>
{% endmacro %}